<h1>Edit task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.submit %>
<% end %>

<%= link_to "Destroy #{@task.title}", task_path(@task), method: :delete, data: { confirm: "Are you sure?"} %>
